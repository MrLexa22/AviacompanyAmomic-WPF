<Window x:Class="Aviacompany_Amomic.UI.Windows.WindowMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aviacompany_Amomic.UI.Windows"
        mc:Ignorable="d"
        Title="" Height="150" Width="250" ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock x:Name="tb_text_error" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="14" Style="{StaticResource TextBlockMain}">Ошибка</TextBlock>
        <Button x:Name="close_window" Click="close_window_Click" VerticalAlignment="Bottom" Style="{StaticResource ButtonMain}" Width="100" FontSize="14" Background="#F79420" Foreground="White" BorderBrush="{x:Null}" HorizontalAlignment="Center">Close</Button>
    </Grid>
</Window>
